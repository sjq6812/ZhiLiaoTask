<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:weightSum="1">

    <EditText
        android:id="@+id/change_phone_edit_pwd"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:ems="10"
        android:hint="请输入您的新密码"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/change_phone_edit_pwd_check"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/change_phone_edit_pwd"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:ems="10"
        android:hint="请确认输人的新密码"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/change_phone_btn_sure"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_phone_edit_pwd"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="92dp"
        android:background="#1cf718"
        android:text="确定"
        android:textSize="20dp" />

    <Button
        android:id="@+id/change_phone_btn_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_phone_btn_sure"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:background="#f71818"
        android:text="取消"
        android:textSize="20dp" />
</RelativeLayout>